{
    "name": "broadway/event-store-mongodb",
    "description": "A MongoDB EventStore implementation for Broadway.",
    "license": "MIT",
    "homepage" : "https://github.com/broadway/event-store-mongodb",
    "authors": [
        {
            "name": "Robin van der Vleuten",
            "email": "robin@webstronauts.co"
        }
    ],
    "require": {
        "php": ">=7.2",
        "broadway/broadway": "^2.2.1",
        "mongodb/mongodb": "^1.0",
        "ext-mongodb": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "ramsey/uuid": "^4.0",
        "broadway/coding-standard": "^1.2",
        "phpstan/phpstan": "@stable"
    },
    "autoload": {
        "psr-4": {
            "Broadway\\EventStore\\MongoDB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Broadway\\EventStore\\MongoDB\\": "test/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
